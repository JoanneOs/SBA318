<!DOCTYPE html>
<html>
<head>
  <title>Driver Portal</title>
  <%- include('partials/header') %>
</head>
<body>
  <%- include('partials/nav') %>
  
  <div class="container mt-4">
    <h1>Driver Dashboard</h1>
    
    <% if (currentDriver) { %>
      <div class="alert alert-success">
        Welcome, <%= currentDriver.driverName %>!  <!-- Assuming the name field in your JSON is "driverName" -->
        Status: <span class="badge bg-primary"><%= currentDriver.status %></span> <!-- Assuming "status" field -->
      </div>
    <% } else { %>
      <div class="alert alert-warning">
        No driver found.
      </div>
    <% } %>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
